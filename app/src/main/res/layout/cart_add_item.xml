<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:elevation="1dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <TextView
            android:id="@+id/home_rv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/archivo_semibold"
            android:text="rv_name"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/minus_btn"
            app:layout_constraintStart_toStartOf="@+id/plus_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_rv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/archivo_medium_italic"
            android:text="7$"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/home_rv_image"
            app:layout_constraintStart_toStartOf="@+id/home_rv_image" />

        <ImageView
            android:id="@+id/home_rv_image"
            android:layout_width="128dp"
            android:layout_height="88dp"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="21dp"
            android:scaleType="centerCrop"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.161" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/plus_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.283"
            app:layout_constraintStart_toEndOf="@+id/home_rv_image"
            app:layout_constraintTop_toTopOf="@+id/home_rv_image" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/minus_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/subtract"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.549"
            app:layout_constraintStart_toEndOf="@+id/plus_btn"
            app:layout_constraintTop_toTopOf="@+id/plus_btn" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deleted_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/delete"
            app:layout_constraintEnd_toEndOf="@+id/minus_btn"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintStart_toStartOf="@+id/plus_btn"
            app:layout_constraintTop_toBottomOf="@+id/plus_btn" />

        <TextView
            android:id="@+id/count_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_medium"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/plus_btn"
            app:layout_constraintEnd_toStartOf="@+id/minus_btn"
            app:layout_constraintStart_toEndOf="@+id/plus_btn"
            app:layout_constraintTop_toTopOf="@+id/plus_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>